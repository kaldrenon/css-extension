{
  "manifest_version": 2,
  "name": "CSS Extension",
  "description": "Set up some CSS to apply to pages.",

  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "editor.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["js/apply_css.js", "js/editor.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ]
}
